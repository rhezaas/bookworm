{
    "extends": "tslint:recommended",
    "rules": {
        "no-var-keyword": true,
        "prefer-const": true,
        "no-shadowed-variable": true,
        "no-unused-variable": true,
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "no-conditional-assignment": true,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "array-type": [true, "generic"],
        "no-debugger": true,
        "indent": [true, "tabs", 4],
        "quotemark": [true, "single"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never", "esSpecCompliant": true}],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "member-access": false,
        "variable-name": [false, "check-format", "allow-snake-case"],
        "semicolon": true,
        "whitespace": [true, "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast", "check-type-operator", "check-preblock"],
        "ordered-imports": false,
        "object-literal-sort-keys": [false, "ignore-case", "match-declaration-order"],
        "interface-name": [true, "never-prefix"],
        "align": false,
        "no-magic-numbers": false,
        "max-classes-per-file": false,
        "max-line-length": false,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-consecutive-blank-lines": false
    }
}
